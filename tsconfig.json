{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["ESNext"],
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["build", "node_modules"]
}
